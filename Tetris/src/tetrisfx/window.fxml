            <children>
                <Pane style="-fx-background-color: #393939;">
                    <children>
                        <Canvas fx:id="nextShapeCanvas" height="92.0" layoutY="28.0" width="138.0" />
                        <Label layoutX="14.0" layoutY="6.0" text="NEXT" textFill="WHITE" />
                    </children>
                </Pane>
                <Pane prefHeight="71.0" prefWidth="138.0" style="-fx-background-color: #393939;">
                    <children>
                        <Label layoutX="14.0" layoutY="6.0" text="SCORE" textFill="WHITE" />
                  <Label fx:id="lblScore" alignment="CENTER_RIGHT" graphicTextGap="0.0" layoutX="14.0" layoutY="30.0" prefHeight="28.0" prefWidth="112.0" textAlignment="RIGHT" textFill="WHITE">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
                    </children>
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </Pane>
                <Pane prefHeight="100.0" prefWidth="138.0" style="-fx-background-color: #393939;">
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
